{
  "compilerOptions": {
	"experimentalDecorators": true,
    "incremental": true,
    "jsx": "react-jsx",
    "target": "es6",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": "src",
    "types": [
      "node",
    ],
    "paths": {
      "@components/*": ["web/components/*"],
      "@assets/*": ["web/assets/*"],
      "@pages/*": ["web/pages/*"],
      "@layouts/*": ["web/layouts/*"],
      "@service/*": ["web/service/*"],
      "@hooks/*": ["web/hooks/*"],
      "@states/*": ["web/states/*"],
      "@utils/*": ["web/utils/*"],
      "@lib/*": ["web/lib/*"],
      "@constants/*": ["web/constants/*"],
      "@web/*":  ["web/*"]
    }
  },
  "include": ["src", "tests", "index.d.ts"],
  "exclude": ["node_modules", "build", "scripts"]
}
